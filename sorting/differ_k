
//User function Template for Java



class Complete{
    
   
    // Function for finding maximum and value pair
    public static int search (int arr[], int n, int x, int k) {
        //Complete the function
        int pos=0;
       while(pos<n)
       {
            if(arr[pos]==x)
                
                return pos;
                int steps=Math.abs(arr[pos]-x)/k;
                pos=pos+Math.max(1,steps);
            }
           
return -1;
    
    
} 

}



